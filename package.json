{
  "$schema": "https://json.schemastore.org/package",
  "name": "@finando/foundation",
  "description": "A collection of reusable building blocks.",
  "repository": {
    "type": "git",
    "url": "git@github.com:finando/foundation.git"
  },
  "author": {
    "name": "Alexander Zakharov (azaxarov)",
    "email": "alexander.zakharov@finando.app"
  },
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "workspaces": [
    "packages/components/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "commit": "cz",
    "compile": "tsc",
    "lint": "run-p lint:eslint",
    "lint:eslint": "eslint --ext tsx,ts,jsx,js,json .",
    "lint:eslint:fix": "eslint --ext tsx,ts,jsx,js,json . --fix",
    "lint:eslint:staged:fix": "eslint --ext tsx,ts,jsx,js,json --fix",
    "lint:fix": "run-p lint:eslint:fix",
    "lint:fix:staged": "run-p lint:eslint:staged:fix -- {@}",
    "prepare": "husky install",
    "start": "run-p storybook:dev",
    "storybook:build": "storybook build",
    "storybook:dev": "storybook dev -p 6006",
    "test": "lerna run test"
  },
  "dependencies": {
    "react": "^18.2.0",
    "styled-components": "^6.0.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@finando/eslint-config-typescript-react": "^0.2.0",
    "@finando/typescript-config": "^1.0.1",
    "@storybook/addon-a11y": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-interactions": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/addon-styling": "^1.3.6",
    "@storybook/blocks": "^7.0.26",
    "@storybook/react": "^7.0.26",
    "@storybook/react-webpack5": "^7.3.2",
    "@storybook/testing-library": "^0.2.0",
    "@svgr/webpack": "^8.1.0",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.20",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-styled-components": "^2.1.4",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-storybook": "^0.6.13",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lerna": "^7.1.5",
    "lint-staged": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "storybook": "^7.3.2",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0"
  }
}
